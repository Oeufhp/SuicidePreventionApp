<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:orientation="vertical"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.latte.oeuff.suicidepreventionapp.SafetyPlanning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/squarebtn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_addphoto_in_home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.00"
            android:background="#6200EA"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Plan_No4"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

        <LinearLayout
            android:id="@+id/addplan_no4_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/squarebtn"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/add2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Add a plan"
                android:textColor="#000000"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delplan_no4_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/squarebtn"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/del2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Delete a plan"
                android:textColor="#000000"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/planno4layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:background="@drawable/squarebtn"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:id="@+id/safetyPlanningTopic4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Please add a plan"/>
            <TextView
                android:id="@+id/safetyPlanningMsg4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="Please add a plan"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>